<h4><%=t(:search_patient, :scope => :topics)%></h4>
<div class="row">
  <div class="cols-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 columns">
    <div class="row-fluid">
      <%= form_for :patient, :url => searchPatients_path , :remote => true, :html => {:class => "form well",  :id => "searchForm"} do |p|%>
          <div class="row-fluid">
            <div class="form-group span6">
              <%=p.label t(:patient_id, :scope => :widget_names)%>
              <%=p.text_field :patient_id, class: "form-control"%>
            </div>
            <div class="form-group span6">
              <%=p.label t(:email_id_label, :scope => :widget_names)%>
              <%=p.text_field :email_id, class: "form-control"%>
            </div>
          </div>
          <div class="row-fluid">
            <div class="form-group span6">
              <%=p.label t(:first_name_label, :scope => :widget_names)%>
              <%=p.text_field :first_name, class: "form-control"%>
            </div>
            <div class="form-group span6">
              <%=p.label t(:last_name_label, :scope => :widget_names)%>
              <%=p.text_field :last_name, class: "form-control"%>
            </div>
          </div>

          <div class="row-fluid">
            <div class="form-group span6">
              <%=p.submit t(:search, :scope => :widget_names), :class => "btn btn-primary btn-small"%>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

<div id="patientIndexId">
  <%= render 'patients/patient', :patients => @patients%>
</div>
