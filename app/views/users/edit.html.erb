<h4><%=t(:update_user, :scope => :topics)%></h4>
<div class="row">
  <div class="cols-xs-12 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 columns">
    <div class="row-fluid">
    <%= form_for @user, :html => {:class => "form well"} do |u|%>
        <%= render 'common/error_messages', :object => u.object %>
        <div class="row-fluid">
            <div class="form-group span6">
              <%=u.label t(:first_name_label, :scope => :widget_names)%>
              <%=u.text_field :first_name, class: "form-control"%>
            </div>
            <div class="form-group span6">
              <%=u.label t(:last_name_label, :scope => :widget_names)%>
              <%=u.text_field :last_name, class: "form-control"%>
            </div>
        </div>
        <div class="row-fluid">
            <div class="form-group span6">
              <%=u.label t(:email_id_label, :scope => :widget_names)%>
              <%=u.text_field :email_id, class: "form-control"%>
            </div>
            <div class="form-group span6">
              <%=u.label t(:user_type_label, :scope => :widget_names)%>
              <%=u.select(:user_type_id, @user_types, {}, {class: "form-control"}) %>
            </div>
        </div>
        <div>
          <%=u.submit t(:update_btn, :scope => :widget_names), :class => "btn btn-primary btn-small"%>
        </div>
    <% end %>
    </div>
  </div|>
</div>
