<div>
  <div class="row">
    <div class="cols-xs-12 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3 columns">
    <%= form_for(:session, :url => sessions_path) do |s|%>
        <div class="form-group">
          <%= s.label t(:email_id_label, :scope => :widget_names) %>
          <%= s.text_field :email_id, class: "form-control", placeholder: "Enter Email", required: true %>
        </div>
        <div class="form-group">
          <%= s.label t(:password_label, :scope => :widget_names) %>
          <%= s.password_field :password, class: "form-control", placeholder: "Enter Password", required: true %>
        </div>
        <div class="cols-xs-12 col-md-6 col-md-offset-3 col-lg-8 col-lg-offset-2 columns">
          <%= s.submit t(:login_btn, :scope => :widget_names), :class => "btn btn-primary btn-small btn-small--margin-top"%>
        </div>
    <% end %>
    </div>
  </div>
</div>
